<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="br_inherited_res_company_form" model="ir.ui.view">
        <field name="name">br.inherited.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <xpath expr="//div" position="after">
                <group>
                    <field name="br_alias_company_name" style="width: 30%;"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>