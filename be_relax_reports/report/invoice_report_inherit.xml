    <template id="external_layout_standard_tax_invoice">
        <div t-attf-class="header o_company_#{company.id}_layout">
            <!--            <div class="o_boxed_header"/>-->
            <table style="width:100%;">
                <tr>
                    <td style="text-align:center;padding-top:15px">
                        <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" width="180px"
                             height="100px" alt='Logo'/>
                    </td>
                </tr>
            </table>
        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <!--            <div class="o_boxed_header"/>-->
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="background-color:#063970;color:white">
                <p>

                    <span t-esc="doc.company_id.br_alias_company_name"/>
                    <span t-esc="doc.company_id.street"/>
                    <span t-esc="doc.company_id.street2"/>

                    <span t-esc="doc.company_id.city"/>
                    <span t-esc="doc.company_id.state_id.name"/>

                    <span t-esc="doc.company_id.zip"/>
                    <span t-esc="doc.company_id.country_id.name"/>
                    <br/>
                    VAT Number
                    <span t-esc="doc.company_id.vat"/>

                </p>
            </div>
        </div>
    </template>

    <!--    header part is here -->
    <template id="report_tax_invoice">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <!--  Multicompany  -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>
        <t t-call="be_relax_reports.external_layout_standard_tax_invoice">
            <t t-raw="0"/>
        </t>
    </template>
