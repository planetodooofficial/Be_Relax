<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">

	<t t-name="PromoCodePopups" owl="1">
		<div class="modal-dialog">
			<div class="popup popup-textinput">
				<div class='title'>
					Redeem Amount
				</div>
				<div style="padding: 2%;height: 64%;margin-top:-4%;background-color:#d1d9da">
					<p class="sub-line-title">Hello, <t t-esc=" props.partner_id || '' " /></p>
					<p class="sub-line-title">Your Coupon Code: <t t-esc=" props.code" /></p>
					<p class="sub-line-title">Your Coupon Amount : <t t-esc=" props.points" /></p>
					<p class="sub-line-title">Enter amount to Redeem : </p>
					<input id="RedemptionInputext" type='text' t-ref="RedemptionInputRef" style="margin-top: 15px;"></input>
				</div>
				<div class="footer">
					<div t-on-click="_OnClickLoad" class="button">
						Redeem
					</div>
					<div t-on-click="_OnClickCancel" class="button cancel">
						Cancel
					</div>
				</div>
			</div>
		</div>
	</t>

</templates>