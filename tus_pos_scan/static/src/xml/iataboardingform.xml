<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="IteaBoardingForm" owl="1">
        <Draggable>
            <div class="popup">
                <header class="title drag-handle">a
                        <t t-esc="props.title"/>
                </header>
                <body style="background: white !important;overflow: auto;height: 70vh;">
                    <table style="width:100% !important;">
                        <tr>
                        <td style="text-align: left;">
                            <span>
                                <b>Passenger Name</b>
                            </span>
                        </td>
                            <td>
                            <input type="text" id="passenger_name"
                                   t-att-value="props.posmodel.selectedOrder.boarding[props.index].passenger_name"/>
                        </td>
                    </tr>
                        <tr>
                            <td style="text-align: left;">
                                <span>
                                    <b>Departure</b>
                                </span>
                            </td>
                            <td>
<!--                                <input type="text" id="departure"-->
<!--                                       t-att-value="props.posmodel.selectedOrder.boarding[props.index].departure"/>-->
                                <select id="o_iata_code" style="text-align: left;display: inline-block;overflow: hidden;background: white;min-height: 44px;font-size: 20px;color: #444;padding: 10px;border-radius: 3px;border: none;box-shadow: 0px 0px 0px 1px gainsboro inset;box-sizing: border-box;width: 80%;">
                                    <t t-foreach='env.pos.iata_code' t-as='code' t-key="code.id">
                                        <t t-if="code.id == props.posmodel.selectedOrder.boarding[props.index].departure">
                                             <option t-att-value='code.id'>
                                                 <t t-esc='code.code'/>
                                             </option>
                                        </t>
                                     </t>
                                     <t t-foreach='env.pos.iata_code' t-as='code' t-key="code.id">
                                         <option t-att-value='code.id'>
                                             <t t-esc='code.code'/>
                                         </option>
                                     </t>
							    </select>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: left;">
                                <span>
                                    <b>Destination</b>
                                </span>
                            </td>
                            <td>
                                <input type="text" id="destination"
                                       t-att-value="props.posmodel.selectedOrder.boarding[props.index].destination"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: left;">
                                <span>
                                    <b>Flight Company</b>
                                </span>
                            </td>
                            <td>
                                <input type="text" id="flight_company"
                                       t-att-value="props.posmodel.selectedOrder.boarding[props.index].flight_company"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: left;">
                                <span>
                                    <b>Flight Number</b>
                                </span>
                            </td>
                            <td>
                                <input type="text" id="flight_number"
                                       t-att-value="props.posmodel.selectedOrder.boarding[props.index].flight_number"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: left;">
                                <span>
                                    <b>Email</b>
                                </span>
                            </td>
                            <td>
                                <input type="text" id="flight_email"
                                       t-att-value="props.posmodel.selectedOrder.boarding[props.index].flight_email"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: left;">
                                <span>
                                    <b>Phone Number</b>
                                </span>
                            </td>
                            <td>
                                <input type="number" id="flight_phone"
                                       t-att-value="props.posmodel.selectedOrder.boarding[props.index].flight_phone"/>
                            </td>
                        </tr>
                    </table>
                </body>
                <footer class="footer centered">
                    <div class="button confirm highlight"
                         t-on-click="confirm">
                        <t t-esc="props.confirmText"/>
                    </div>
                    <div class="button cancel"
                         t-on-click="cancel">
                        cancel
                    </div>
                </footer>
            </div>
        </Draggable>
    </t>

</templates>