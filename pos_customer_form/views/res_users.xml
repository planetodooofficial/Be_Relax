<odoo>
    <record id="view_res_users_from_inherit" model="ir.ui.view">
        <field name="name">res.users.form.tus</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="allowed_pos_configs" domain="[('company_id','in',company_ids)]" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>