<odoo>
    <record id="commission_view_form" model="ir.ui.view">
        <field name="name">commission_view_form</field>
        <field name="model">pos.commission.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                    <field name="pos_commission_ids">
                        <tree editable="bottom">
                            <field name="employee_ids" required="1" widget="many2many_tags"
                                   context="{'is_employee': 1}"/>
                            <field name="commission" required="1"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="commission_view_tree" model="ir.ui.view">
        <field name="name">commission_view_tree</field>
        <field name="model">pos.commission.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="pos_commission_ids"/>
            </tree>
        </field>
    </record>

    <record id="commission_line_action" model="ir.actions.act_window">
        <field name="name">Commission</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">pos.commission.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="commission_menu" name="Commission" parent="point_of_sale.menu_point_config_product"
              action="commission_line_action"/>
    <menuitem id="commission_report" name="Commission Report" parent="point_of_sale.menu_point_rep"
              action="commission_report_action"/>
</odoo>