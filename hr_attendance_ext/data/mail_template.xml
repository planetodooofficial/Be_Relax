<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="checkout_mail_template" model="mail.template">
            <field name="name">Checkout Mail Template</field>
            <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
            <field name="subject">Checkout reminder</field>
<!--            <field name="email_from">{{ (object.company_id.email_formatted or user.company_id.email_formatted) }}</field>-->
            <field name="email_to">{{ (object.employee_id.work_email or '') }}</field>
            <field name="body_html" type="html">
                <div style="width:100%;max-width: 940px;">
                    <div style="font-size:1.125rem;">
                        Dear <t t-esc="object.employee_id.name"/>,

                        <div style="margin-top: 10px;">
                            I hope this message finds you well. We wanted to remind you to check out for the day(<t t-esc="object.check_in.date()"/>) as it
                            appears that you haven't done so yet. Properly checking out is important for several
                            reasons, including ensuring accurate attendance records and security protocols within our
                            organization.
                        </div>

                        <div style="margin-top: 15px;">Thanks</div>
                    </div>
                </div>
            </field>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>