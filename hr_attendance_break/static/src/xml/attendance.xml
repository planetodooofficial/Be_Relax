<?xml version="1.0" encoding="utf-8"?>
<template xml:space="preserve">

    <t t-extend="HrAttendanceCheckInOutButtons">
        <t t-jquery="button[t-attf-class*='o_hr_attendance_sign_in_out_icon']" t-operation="after">
            <t t-set="break" t-value="widget.attendance_break_state.attendance_break_state=='break'"/>

            <t t-if="checked_in">
                    <button t-attf-class="o_hr_attendance_break_resume_icon btn btn-{{ break ? 'warning' : 'success' }} align-self-center px-5 py-3 mt-4 mb-2">
                        <span class="align-middle fs-2 me-3 text-white" t-if="!break">Take break</span>
                        <i class="fa fa-4x fa-rotate-right align-middle" t-if="break" title="Resume"/>
                        <i class="fa fa-4x fa-cutlery align-middle" t-if="!break" title="Break"/>
                        <span class="align-middle fs-2 ms-3" t-if="break">Resume break</span>
                    </button>
            </t>
        </t>
    </t>

    <t t-extend="HrAttendanceGreetingMessage">
        <t t-jquery="button.o_hr_attendance_button_dismiss" t-operation="before">

            <t t-if="widget.attendance_break_state == 'break'">
                <div class="alert alert-info h2 mt0" role="status">
                    Break Successfully
                </div>
            </t>
            <t t-if="widget.attendance_break_state == 'resume'">
                <div class="alert alert-info h2 mt0" role="status">
                    Resume Successfully
                </div>
            </t>

        </t>
    </t>

</template>