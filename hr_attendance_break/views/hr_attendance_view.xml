<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_attendance_tree_kiosk_break" model="ir.ui.view">
        <field name="name">hr.attendance</field>
        <field name="model">hr.attendance</field>
        <field name="priority" eval="99"/>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_out']" position="after">
                <field name="break_ids" widget="many2many_tags" readonly="1"/>
                <field name="break_hours" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="hr_attendance_view_form_kiosk_break" model="ir.ui.view">
        <field name="name">hr.attendance.form</field>
        <field name="model">hr.attendance</field>
        <field name="priority" eval="99"/>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <notebook>
                    <page string="Break / Resume Time">
                        <field name="break_ids" readonly="0">
                            <tree>
                                <field name="webcam_check_in" widget="image"/>
                                <field name="webcam_check_out" widget="image"/>
                                <field name="break_time"/>
                                <field name="resume_time"/>
                                <field name="attendance_break_state"/>
                                <field name="break_hours"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <record id="view_attendance_record_tree_break" model="ir.ui.view">
        <field name="name">attendance.record</field>
        <field name="model">attendance.record</field>
        <field name="inherit_id" ref="point_of_sale_ext.view_attendance_record_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_out']" position="after">
                <field name="break_ids" widget="many2many_tags" readonly="1"/>
                <field name="break_hours" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>