<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="CashierTip" owl="1">
        <Draggable>
            <div class="popup">
                <header class="title drag-handle">
                    <t t-esc="props.title"/>
                </header>
                <body style="background: white !important;overflow: auto;height: 70vh;">
                    <table>
                        <thead>
                            <tr>
                                <th style="text-align: left;">Name</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="cashiers" t-as="a" t-key="a.id">
                                <tr>
                                    <td><t t-esc="a.label"/></td>
                                    <td style="padding-top: 10px;padding-left: 10px;"><input type="number" t-attf-value="{{a.defaultTip}}" t-attf-id="{{a.id}}"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </body>
                <footer class="footer centered">
                    <div class="button confirm highlight"
                         t-on-click="confirm">
                        <t t-esc="props.confirmText"/>
                    </div>
                </footer>
            </div>
        </Draggable>
    </t>
</templates>
