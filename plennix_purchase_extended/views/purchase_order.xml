<?xml version="1.0"?>
<odoo>
    <record id="purchase_order_form_inherit_delivery" model="ir.ui.view">
        <field name="name">purchase.order.form.jk.inherit.delivery</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="total_order_qty"/>
            </xpath>
        </field>
    </record>

     <record model="ir.ui.view" id="purchase_order_view_tree_inherit_total_order_qty">
        <field name="name">purchase.order.view.tree.inherit.total_order_qty.purchase</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="before">
                <field name="total_order_qty"/>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_kpis_tree_total_order_qty" model="ir.ui.view">
        <field name="name">purchase.order.inherit.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="before">
                <field name="total_order_qty"/>
            </xpath>
        </field>
    </record>
</odoo>